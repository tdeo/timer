{
  "name": "timer",
  "version": "1.0.0",
  "description": "Time recurring events",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "build -mwl",
    "dist:win": "build --w",
    "dist:mac": "build --m",
    "dist:linux": "build --l"
  },
  "build": {
    "appId": "com.electron.timer",
    "productName": "Timer",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "NSIS",
        "portable"
      ],
      "icon": "build/icon.ico"
    }
  },
  "author": "Thierry Deo <thierry.deo@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^2.0.2",
    "electron-builder": "20.14.7"
  }
}
